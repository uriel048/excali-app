{
  "name": "excali-app",
  "private": true,
  "version": "1.0.0",
  "description": "Aplicativo Excalidraw Desktop",
  "author": "Uriel Ventura",
  "type": "module",
  "main": "electron-main.cjs",
  "scripts": {
    "build": "vite build",
    "electron": "electron .",
    "app": "npm run build && npm run electron",
    "dist": "npm run build && electron-builder --win"
  },
  "dependencies": {
    "@excalidraw/excalidraw": "^0.18.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "electron": "^40.0.0",
    "electron-builder": "^26.7.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "png-to-ico": "^3.0.1",
    "vite": "npm:rolldown-vite@7.2.5"
  },
  "overrides": {
    "vite": "npm:rolldown-vite@7.2.5"
  },
  "build": {
    "appId": "com.excaliapp.desktop",
    "productName": "ExcaliApp",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "public/icon.png",
      "electron-main.cjs",
      "electron-preload.cjs",
      "package.json"
    ],
    "win": {
      "target": "portable",
      "icon": "public/icon.png"
    }
  }
}
